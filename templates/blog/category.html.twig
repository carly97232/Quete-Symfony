{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}


{% block body %}
    <h1>Categories</h1>

    <div class="container text-center">
        {{ form_end(form) }}
        {% for category in categories %}

            <a href="{{ path('category_show',{'id': category.id}) }}"><h2>{{ category.name }}</h2></a>
        {% endfor %}
        <a class="btn btn-success" href="{{ path('blog_index') }}" role="button">Back to Blog</a>
    </div>
{% endblock %}
