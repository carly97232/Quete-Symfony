{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}


{% block body %}

    <h1>Categories</h1>

    <div class="container">
        <div class="row form col-8">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            <div class="text-center">
                <button class="btn">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
        {% for category in categories %}
            <a href="{{ path('category_show',{'id': category.id}) }}"><h2>{{ category.name }}</h2></a>
        {% endfor %}
    </div>
    <a href="{{ path('blog_index') }}">
        Back to Blog.
    </a>

{% endblock %}
